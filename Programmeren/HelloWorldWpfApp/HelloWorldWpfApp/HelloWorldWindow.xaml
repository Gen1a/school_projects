<Window x:Class="HelloWorldWpfApp.HelloWorldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldWpfApp"
        mc:Ignorable="d"
        Title="Hello World" Height="200" Width="450">
    <Grid>
        <TextBox x:Name="NaamTextBox" HorizontalAlignment="Left" Margin="30,25,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="20"/>
        <Button x:Name="GroetButton" Click="GroetButton_Click" Content="Groet" HorizontalAlignment="Left" Height="20" Margin="200,25,0,0" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="BoodschapLabel" Content="Hello World" HorizontalAlignment="Left" Margin="309,22,0,0" VerticalAlignment="Top" Width="150" Height="30"/>
        <RadioButton x:Name="NederlandsRadioButton" Content="Nederlands" IsChecked="True" HorizontalAlignment="Left" Margin="30,76,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="EngelsRadioButton" Content="Engels" HorizontalAlignment="Left" Margin="30,96,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="HoofdlettersCheckBox" Content="Hoofdletters" HorizontalAlignment="Left" Height="33" Margin="30,116,0,0" VerticalAlignment="Top" Width="118"/>
    </Grid>
</Window>
