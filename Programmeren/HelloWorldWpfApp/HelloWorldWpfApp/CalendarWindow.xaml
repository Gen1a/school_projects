<Window x:Class="HelloWorldWpfApp.CalendarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldWpfApp"
        mc:Ignorable="d"
        Title="Calendar" Height="215" Width="375">
    <Grid>
        <ListBox x:Name="GeselecteerdeDataListBox" HorizontalAlignment="Left" Height="170" Margin="195,0,0,0" VerticalAlignment="Center" Width="140" Grid.ColumnSpan="2" IsSynchronizedWithCurrentItem="True"/>
        <Calendar x:Name="Calendar1" HorizontalAlignment="Left" Height="170" Margin="10,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2" SelectionMode="MultipleRange" SelectedDatesChanged="Calendar1_SelectedDatesChanged"/>
    </Grid>
</Window>
